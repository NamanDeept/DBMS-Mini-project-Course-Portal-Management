<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Student Registration Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="registerpage/css/registerStudent.css">
  </head>

  <body>

    <div class="wrapper">
      <div class="inner">
        <div class="image-holder">
          <div class="logo" style="height:15rem;width:13.5rem;margin-left:3rem" alt=""></div>
          <br><br>
          <h2 style="font-family:sans-serif;text-align:center;">
            IIIT-ALLAHABAD
          </h2> 
        </div>
        <form action="/addFaculty" method="POST">
          <h3>Faculty Registration Form</h3>
          <div class="form-wrapper">
            <input type="text" placeholder="Full Name" class="form-control" name="facName" id="nm">
            <!--input type="text" placeholder="Last Name" class="form-control" -->
          </div>
          <div class="form-wrapper">
            <input type="text" placeholder="Faculty Id" class="form-control" name="facCode" id="er">
            <i class="zmdi zmdi-enrollmentId"></i>
          </div>
          <div class="form-wrapper">
            <input type="text" placeholder="Email Address" class="form-control" name="facMail" id="eadd">
            <i class="zmdi zmdi-email"></i>
          </div>
          <div class="form-wrapper">
            <input type="text" placeholder="Department" class="form-control" name="dept" id="dept">
            <i class="zmdi zmdi-department"></i>
          </div>
          <div class="form-wrapper">
            <input type="text" placeholder="Gender" class="form-control" name="gender" id="gendr">
            <i class="zmdi zmdi-caret-down" style="font-size: 17px"></i>
          </div>
          <div class="form-wrapper">
            <input type="password" placeholder="Password" class="form-control" name="facPassword" id="pass">
            <i class="zmdi zmdi-lock"></i>
          </div>
          <button id="myBtn" type="submit">Register
            <i class="zmdi zmdi-arrow-right"></i>
          </button>
        </form>
      </div>
    </div>
    <script>
      var buttonz = document.getElementById("myBtn");
      var a = document.getElementById("nm").value;
      var b = document.getElementById("er").value;
      var c = document.getElementById("eadd").value;
      var d = document.getElementById("dept").value;
      
     buttonz.addEventListener("click",function(){
       if (a=="" || b=="" || c=="" || d="")
        {
            alert("Please fill the Required Field");
            
        }else{
          alert("Registered Successfully");
        }
             
        });

    </script>
  </body>
</html>